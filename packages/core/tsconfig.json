{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@micaiah_effiong/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleDetection": "force",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "example/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
